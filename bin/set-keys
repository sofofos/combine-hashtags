#!/usr/bin/env ruby


# uncomment below to add a .env file to your project
# touch .env
# echo '.env*' >> .gitignore
# git add .gitignore 
# git commit -m "added .env to .gitignore"
# git push origin $HEAD

# Store IG access_token securely in a .env file 
puts "Type your Instagram API access token:"
access_token = gets.chomp

output = File.open( ".env", "a" )
output << "ACCESS_TOKEN=#{access_token}" 
output.close

puts "Make sure to set paths for local storage"
puts "All done"
